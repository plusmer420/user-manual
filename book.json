{
  "title": "oa-rapid資訊系統",
  "author": "Plusmer420",
  "description": "oa-rapid資訊系統快速入門",
  "language": "zh-tw",
  "gitbook": "3.2.3",
  "structure": {
    "readme": "README.md"
  },
  "styles": {
    "website": "styles/website.css",
    "ebook": "styles/ebook.css",
    "pdf": "styles/pdf.css",
    "mobi": "styles/mobi.css",
    "epub": "styles/epub.css"
  },
  "links": {
    "sharing": {
      "all": null,
      "facebook": null,
      "google": null,
      "twitter": null,
      "weibo": null
    },
    "sidebar": {
      "HOME": "http://wp2.oa-rapid.com/"
    }
  },
  "pdf": {
    "toc": true,
    "fontSize": 18,
    "footerTemplate": null,
    "headerTemplate": null,
    "margin": {
      "bottom": 10,
      "left": 0,
      "right": 0,
      "top": 10
    },
    "pageNumbers": false,
    "paperSize": "b5"
  },
  "plugins": [
    "toolbar",
    "splitter",
    "anchors",
    "-lunr",
    "-sharing",
    "-search",
    "search-pro",
    "lightbox",
    "back-to-top-button"
  ],
  "pluginsConfig": {
    "toolbar": {
      "buttons": [
        {
          "label": "PDF",
          "icon": "fa fa-download",
          "url": "https://drive.google.com/file/d/1rpc9pqItwd_yNfoeRh2L07ibk-ns3D3D/view"
        }
      ]
    },
    "pluginsConfig": {
      "fontsettings": {
          "theme": "white",
          "family": "sans",
          "size":  3
      }
  },
      "theme-default": {
      "showLevel": false
    }
  }
}